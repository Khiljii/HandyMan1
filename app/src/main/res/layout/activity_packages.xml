<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Packages">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandyMan"
        android:id="@+id/text1"
        android:textSize="29sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/musturd"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Service plan"
        android:layout_below="@+id/text1"
        android:id="@+id/text2"
        android:textColor="@color/musturdlite"
        android:layout_marginLeft="20dp"
        android:textSize="19sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/layout1"
            android:background="@drawable/layout"
            android:backgroundTint="#FFC107">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="Hourly Plan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:gravity="center_vertical"
                android:id="@+id/text4"
                android:text="PKR 7/Hour"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:id="@+id/layout2"
            android:layout_marginRight="40dp"
            android:background="@drawable/layout"
            android:backgroundTint="#FFC107">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:id="@+id/text5"
                android:text="Daily Plan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:gravity="center_vertical"
                android:id="@+id/text6"
                android:text="PKR 30/Day"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:id="@+id/layout3"
            android:layout_marginRight="40dp"
            android:background="@drawable/layout"
            android:backgroundTint="#FFC107">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="Weekly Plan"
                android:textColor="@color/black"
                android:id="@+id/text7"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:gravity="center_vertical"
                android:text="PKR 200/contract"
                android:textColor="@color/black"
                android:id="@+id/text8"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>